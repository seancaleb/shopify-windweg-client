{% assign sid = section.id %}

<style>
  #shopify-section-{{ sid }} .image-wrapper {
    position: relative;
    width: 100%;
  }

  #shopify-section-{{ sid }} .page-width {
    position: absolute;
    bottom: 2.4rem;
    left: 0;
    right: 0;
    z-index: 1;
  }

  #shopify-section-{{ sid }} div.heading {
    color: #ffffff !important;
  }

  #shopify-section-{{ sid }} .image-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom,rgba(26,26,26,0) 0%, rgba(26,26,26,0.25) 40%, rgba(26,26,26,.75) 100%);
    z-index: 1;
  }

  #shopify-section-{{ sid }} .image {
    display: block;
    width: 100%;
    height: auto;
    position: relative;
    z-index: 0;
    object-fit: cover;
    pointer-events-none;
  }

  @media screen and (min-width: 600px) {
    #shopify-section-{{ sid }} .image {
      max-height: 40rem;
      object-position: center 20%;
    }
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ sid }} .page-width {
      bottom: 4rem;
    }

    #shopify-section-{{ sid }} .image {
      max-height: 45rem;
    }
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ sid }} .image {
      max-height: 50rem;
    }
  }

  @media screen and (min-width: 1600px) {
    #shopify-section-{{ sid }} .image {
      max-height: 50vh;
    }
  }
</style>

<div class="image-wrapper">
  {% if section.settings.heading != blank %}
    <div class="page-width">
      <div class="h2 heading">{{ section.settings.heading }}</div>
    </div>
  {% endif %}

  {% unless section.settings.background_image %}
    {{ 'hero-apparel-1' | placeholder_svg_tag: 'background__placeholder image' }}
  {% else %}
    {{
      section.settings.background_image
      | image_url: width: 1920
      | image_tag:
        class: 'image',
        widths: '1280, 1920',
        sizes: '(max-width: 768px) 100vw, (max-width: 1280px) 1280px, 1920'
    }}
  {% endunless %}
</div>

{% schema %}
{
  "name": "Header with Image",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Header with Image"
    }
  ]
}
{% endschema %}
