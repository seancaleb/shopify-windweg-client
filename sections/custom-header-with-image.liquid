{% assign sid = section.id %}

<style>
  #shopify-section-{{ sid }} svg {
    height: auto;
    width: 100%;
    aspect-ratio: 16 / 9;
    max-height: 60rem;
    object-fit: cover;
    object-position: top left;
    display: block;
  }

  #shopify-section-{{ sid }} .image {
    display: block;
    height: auto;
    width: 100%;
  }

  @media screen and (min-width: 600px) {
    #shopify-section-{{ sid }} .image {
      max-height: 40rem;
      object-fit: cover;
      object-position: center 15%;
    }
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ sid }} .image {
      max-height: 45rem;
    }
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ sid }} .image {
      max-height: 50rem;
    }
  }

  @media screen and (min-width: 1600px) {
    #shopify-section-{{ sid }} .image {
      max-height: 60vh
    }
  }
</style>

{% unless section.settings.background_image %}
  {{ 'hero-apparel-1' | placeholder_svg_tag: 'background__placeholder' }}
{% else %}
  {{
    section.settings.background_image
    | image_url: width: 1920
    | image_tag:
      class: 'image',
      widths: '1280, 1920',
      sizes: '(max-width: 768px) 100vw, (max-width: 1280px) 1280px, 1920'
  }}
{% endunless %}

{% schema %}
{
  "name": "Header with Image",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Header with Image"
    }
  ]
}
{% endschema %}
