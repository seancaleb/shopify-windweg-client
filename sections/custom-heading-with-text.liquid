{% assign sid = section.id %}

{% render 'section-padding-style-config',
  section_id: section.id,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom
%}

<style>
  #shopify-section-{{ sid }} .wrapper {
    display: grid;
    gap: 2.4rem;
    justify-items: start;
  }

  #shopify-section-{{ sid }} .heading {
    order: 2;
  }

  #shopify-section-{{ sid }} .subheading {
    order: 1;
  }

  #shopify-section-{{ sid }} .text {
    order: 3;
    max-width: 65ch;
  }

  @media screen and (min-width: 1280px) {
    #shopify-section-{{ sid }} .wrapper {
        justify-items: center;
        text-align: center;
    }
  }
</style>

<div class="page-width">
  <div class="wrapper">
    {% if section.settings.heading %}
      <h2 class="heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading %}
      <div class="subheading badge badge--secondary">{{ section.settings.subheading }}</div>
    {% endif %}

    {% if section.settings.text %}
      <div class="text">{{ section.settings.text }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Heading with Text",
  "tag": "section",
  "disabled_on": {
    "groups": ["*"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading goes here"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "This is just placeholder text. Don't be alarmed, this is just here to fill up space since your finalized copy isn't ready yet."
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 4,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Top",
      "default": 6
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 4,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Bottom",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Heading with Text"
    }
  ]
}
{% endschema %}
