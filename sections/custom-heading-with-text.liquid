{% assign sid = section.id %}

{% render 'section-padding-style-config',
  section_id: section.id,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom
%}

<style>
  #shopify-section-{{ sid }} {
    background-color: {{ section.settings.background_color }};
  }

  #shopify-section-{{ sid }} .wrapper {
    display: grid;
    gap: 2.4rem;
    justify-items: center;
    text-align: center;
  }

  #shopify-section-{{ sid }} .heading {
    order: 2;
    max-width: 25ch;
  }

  #shopify-section-{{ sid }} .subheading {
    order: 1;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 1.4rem;
  }

  #shopify-section-{{ sid }} .text {
    order: 3;
    max-width: 65ch;
  }
</style>

<div class="page-width">
  <div class="wrapper">
    {% if section.settings.heading != blank %}
      <h2
        class="heading {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 2;"
        {% endif %}
      >
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <div
        class="subheading {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 1;"
        {% endif %}
      >
        {{ section.settings.subheading }}
      </div>
    {% endif %}

    {% if section.settings.text != blank %}
      <div
        class="text {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 3;"
        {% endif %}
      >
        {{ section.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Heading with Text",
  "tag": "section",
  "disabled_on": {
    "groups": ["*"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading goes here"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "This is just placeholder text. Don't be alarmed, this is just here to fill up space since your finalized copy isn't ready yet."
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Top",
      "default": 6
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Bottom",
      "default": 6
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Heading with Text"
    }
  ]
}
{% endschema %}
