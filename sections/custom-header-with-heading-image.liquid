{% assign sid = section.id %}

<style>
  #shopify-section-{{ sid }} img, #shopify-section-{{ sid }} svg {
    height: auto;
    width: 100%;
    aspect-ratio: 16 / 9;
    max-height: 60rem;
    object-fit: cover;
    object-position: top left;
    display: block;
  }
</style>

{% unless section.settings.background_image %}
  {{ 'hero-apparel-1' | placeholder_svg_tag: 'background__placeholder' }}
{% else %}
  {{
    section.settings.background_image
    | image_url: width: 1920, height: 1080
    | image_tag:
      sizes: '(min-width: 1536px) 1536px, (min-width: 1280px) 1280px, (min-width: 1024px) 1024px, (min-width: 768px) 768px, 100vw'
  }}
{% endunless %}

{% schema %}
{
  "name": "Header with Heading Image",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Top",
      "default": 6
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Bottom",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Header with Heading Image"
    }
  ]
}
{% endschema %}
