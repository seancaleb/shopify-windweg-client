{{ 'custom-reviews-list.css' | asset_url | stylesheet_tag }}

{% render 'section-padding-style-config',
  section_id: section.id,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom
%}

<div class="page-width">
  <div class="reviews__wrapper">
    {% if section.settings.heading %}
      <h2
        class="h3 reviews__heading {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 1;"
        {% endif %}
      >
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% comment %} Reviews Grid  {% endcomment %}
    <div class="reviews__list">
      {% for block in section.blocks %}
        <div
          class="wrapper {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
          {{ block.shopify_attributes }}
        >
          <div class="ratings">
            {% for i in (1..5) %}
              <span class="star filled">★</span>
            {% endfor %}
          </div>

          <div class="title">{{ block.settings.title }}</div>

          <div class="text">
            {{ block.settings.text }}
          </div>

          <div class="avatar-wrapper">
            {% assign avatar_image = 'person-' | append: forloop.index | append: '.svg' %}
            {{ avatar_image | inline_asset_content }}
            <div>{{ block.settings.name }}</div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_label != blank and section.settings.url != blank %}
      <a
        href="{{ section.settings.url }}"
        class="button button button--primary {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 1;"
        {% endif %}
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Reviews List",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Das sagen unsere Kunden"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Label",
      "default": "Erleben Sie es selbst"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Collection URL"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Top",
      "default": 6
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Bottom",
      "default": 6
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Der Titel der Rezension steht hier"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Dies ist eine vorübergehende Bewertung für dieses Produkt.</p>"
        },
        {
          "type": "header",
          "content": "Avatar"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "John Doe"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews List",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}
