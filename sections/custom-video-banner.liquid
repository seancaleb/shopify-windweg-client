{% assign sid = section.id %}

<style>
  #shopify-section-{{ sid }} {
    position: relative;
    width: 100%;
    height: auto;
  }

  #shopify-section-{{ sid }} video {
    width: 100%;
    height: auto; /* Make the video responsive by default */
    object-fit: contain; /* Maintain aspect ratio for small screens */
    display: block;
  }

  #shopify-section-{{ sid }} .video-container {
    position: relative;
    width: 100%;
    height: auto; /* Default to auto height */
    display: block;
    overflow: hidden;
  }

  @media (min-width: 1280px) {
    #shopify-section-{{ sid }} {
        height: 100vh; /* Ensure section takes full height on larger screens */
    }

    #shopify-section-{{ sid }} .video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    #shopify-section-{{ sid }} video {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Cover the section fully on larger screens */
    }
  }
</style>

<div class="video-container">
  {% if section.settings.video != blank %}
    {{ section.settings.video | video_tag: autoplay: true, loop: true, controls: false, muted: true }}
  {% endif %}
</div>

{% schema %}
{
  "name": "Video Banner",
  "tag": "section",
  "settings": [
    {
      "type": "video",
      "label": "Video",
      "id": "video"
    }
  ],
  "presets": [
    {
      "name": "Video Banner"
    }
  ]
}
{% endschema %}
