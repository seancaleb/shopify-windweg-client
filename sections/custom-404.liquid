{% assign sid = section.id %}

{% render 'section-padding-style-config',
  section_id: section.id,
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom
%}

<style>
  #shopify-section-{{ sid }} {
      min-height: min(60rem, 50dvh);
      display: grid;
      align-content: center;
  }

  #shopify-section-{{ sid }} .page-width {
      display: grid;
      gap: 2.4rem;
      justify-items: center;
  }
</style>

<div class="page-width">
  <h1 class="h3">
    {% if section.settings.heading != blank %}
      {{ section.settings.heading }}
    {% else %}
      {{ 'templates.404.title' | t }}
    {% endif %}
  </h1>
  <a href="{{ routes.all_products_collection_url }}" class="button button--primary">
    {% if section.settings.button_label != blank %}
      {{ section.settings.button_label }}
    {% else %}
      {{ 'general.continue_shopping' | t }}
    {% endif %}
  </a>
</div>

{% schema %}
{
  "name": "Custom 404",
  "tag": "section",
  "enabled_on": {
    "templates": ["404"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": " Button Label"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Top",
      "default": 6
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 14,
      "step": 1,
      "unit": "rem",
      "label": "Padding Bottom",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Custom 404"
    }
  ]
}
{% endschema %}
