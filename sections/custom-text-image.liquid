{{ 'custom-hero-text-image.css' | asset_url | stylesheet_tag }}

{% assign sid = section.id %}

{% style %}
  #shopify-section-{{ sid }} {
      position: relative;
      background-color: {{ section.settings.background_color  }};
      color: {{ section.settings.text_color  }};
  }
{% endstyle %}

<style>
  #shopify-section-{{ sid }} .wrapper {
    display: grid;
  }

  #shopify-section-{{ sid }} .content-wrapper {
    order: 1;
    display: grid;
    gap: 2.4rem;
    padding-inline: 1.5rem;
    padding-block: 6rem;
    height: auto;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ sid }} .content-wrapper {
      padding-block: 7.5rem;
    }
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ sid }} .content-wrapper {
    }
  }

  #shopify-section-{{ sid }} .image-wrapper {
    order: -1;
  }

  #shopify-section-{{ sid }} .heading {
    color: inherit !important;
    order: 2;
  }

  #shopify-section-{{ sid }} .subheading {
    order: 1;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 1.4rem;
  }

  #shopify-section-{{ sid }} .text {
    max-width: 55ch;
    order: 3;
  }

  #shopify-section-{{ sid }} .button {
    margin-top: 0.8rem;
    order: 4;
  }

  #shopify-section-{{ sid }} .image {
    display: block;
    height: auto;
    width: 100%;
    aspect-ratio: 16 / 9;
  }

  @media screen and (min-width: 480px) {
    #shopify-section-{{ sid }} .content-wrapper {
      justify-items: start;
    }
  }

  @media screen and (min-width: 600px) {
    #shopify-section-{{ sid }} .content-wrapper {
      padding-inline: 2.4rem;
    }
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ sid }} .content-wrapper {
      justify-items: start;
    }

    #shopify-section-{{ sid }} .content-wrapper {
      padding-inline: 5.6rem;
    }

    #shopify-section-{{ sid }} .image-wrapper {
    }
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ sid }} .image {
      position: absolute;
      top: 0;
      right: {% if section.settings.image_position == 'left' %} unset{% else %} 0{% endif %};
      left: {% if section.settings.image_position == 'left' %} 0{% else %} unset{% endif %};
      height: 100%;
      width: 50%;
      z-index: 0;
      object-fit: cover;
      object-position: center;
    }

    #shopify-section-{{ sid }} .wrapper {
      grid-template-columns: repeat(2, 1fr);
      align-items: center;
      min-height: 60rem;
      margin-inline: auto;
    }

    #shopify-section-{{ sid }} .image-wrapper {
      order: {% if section.settings.image_position == 'left' %} -1{% else %} 1{% endif %};
      min-height: 65vh;
    }
  }
</style>

<div class="wrapper" style="max-width: {{ settings.page_width }}px">
  {% comment %} Content  {% endcomment %}
  <div class="content-wrapper">
    {% if section.settings.heading %}
      <h2 class="heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading %}
      <div class="subheading">{{ section.settings.subheading }}</div>
    {% endif %}
    {% if section.settings.text %}
      <div class="text">{{ section.settings.text }}</div>
    {% endif %}
    <a href="{{ section.settings.url }}" class="button button button--{{ section.settings.button_variant }}">
      {{ section.settings.button_label }}
    </a>
  </div>

  {% comment %} Image  {% endcomment %}
  <div class="image-wrapper">
    {% if section.settings.image %}
      {{
        section.settings.image
        | image_url: width: 1600
        | image_tag: class: 'image', widths: '1200, 1600', sizes: '(max-width: 768px) 100vw, 1200px'
      }}
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'image' }}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Text with Image",
  "tag": "section",
  "disabled_on": {
    "groups": ["*"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading goes here"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "This is just placeholder text. Don't be alarmed, this is just here to fill up space since your finalized copy isn't ready yet."
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Label",
      "default": "Discover more"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Collection URL"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    }
  ],
  "presets": [
    {
      "name": "Text with Image"
    }
  ]
}
{% endschema %}
