{% comment %}
  Block Padding for a Section
  Accepts:
  - section_id: {String} Section ID
  - padding_top: {Number} Padding top
  - padding_bottom: {Number} Padding bottom
  Usage:
  {% render 'section-padding-style-config', section_id: section_id, padding_top: padding_top, padding_bottom: padding_bottom %}
{% endcomment %}

<style>
  #shopify-section-{{ section_id }} {
    padding-top: {{ padding_top |  times: 0.6 | round: 0 }}rem;
    padding-bottom: {{ padding_bottom | times: 0.6 | round: 0 }}rem;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ padding_top | times: 0.8 | round: 0 }}rem;
      padding-bottom: {{ padding_bottom | times: 0.8 | round: 0 }}rem;
    }
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ padding_top }}rem;
      padding-bottom: {{ padding_bottom }}rem;
    }
  }
</style>
